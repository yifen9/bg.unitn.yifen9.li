{
	"name": "bg.yifen9.li",
	"title": "bg.yifen9.li",
	"private": true,
	"type": "module",
	"scripts": {
		"astro": "bunx --bun astro",
		"dev": "bun run data:all && bunx --bun astro dev --host 0.0.0.0 --port 4321",
		"build": "bun run data:all && bunx --bun astro build",
		"preview": "bunx --bun astro preview --host 0.0.0.0 --port 4321",
		"data:games": "julia --project=. scripts/games_stats.jl",
		"data:elo": "julia --project=. scripts/elo.jl",
		"data:sessions": "julia --project=. scripts/collect.jl",
		"data:all": "bun run data:games && bun run data:elo && bun run data:sessions",
		"julia:setup": "julia --project=. -e 'using Pkg; Pkg.instantiate(); Pkg.precompile()'",
		"julia:deps": "julia --project=. -e 'using Pkg; Pkg.activate(\".\"); Pkg.add([\"YAML\",\"JSON3\",\"Glob\"]); Pkg.precompile()'",
		"lint": "biome check .",
		"fix": "biome check --write .",
		"update": "bun update --latest"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@tailwindcss/vite": "^4.1.18",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@astrojs/svelte": "^7.2.5",
		"astro": "^4.16.19",
		"svelte": "^5.49.1"
	}
}
